.mobile-search
	display none
	position absolute
	top 0
	left 0
	width 100%
	height 100vh
	background: #fff
	z-index 100
	trn(.15s)
	opacity 0
	visibility hidden
	// transform translate(70px, 0)
	&.is-active
		opacity 1
		visibility visible
		// transform translate(0px, 0)
		

.mobile-search--head
	display flex
	flex-direction row
	align-items center
	padding 12px
	min-height 62px
	background: #517da2
	
	form
		width 100%

.back-search
	display inline-flex
	.icon-back
		width 20px
		height 20px
		fill #fff
		margin-right 20px

.mobile-search--footer
	padding 12px