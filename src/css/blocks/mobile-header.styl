.mobile-header
	display none
	flex-direction column
	justify-content space-between
	background: #517DA2
	min-height 62px
	padding 12px 12px 0

.mobile-header--top
	display flex
	flex-direction row
	align-items center
	justify-content space-between
	margin-bottom 16px
	
	.burger-menu
		margin-right 20px
		span
			background: #fff
	
.mobile-header--top-left
	display flex
	flex-direction row
	color #fff
	
	.name-page
		color #fff
		text-decoration none
		font-weight 700


.list-folder
	overflow-x: scroll
	overflow-y: hidden
	white-space: nowrap
	-webkit-overflow-scrolling: touch
	scrollbar-width: none
		
	// width 10000px
	
	li
		display inline-block
		position relative
		padding-bottom 10px
		
		&.is-active
			&:before
				opacity 1
				visibility visible
		
		&:before
			position absolute
			bottom 0
			left 0
			content ''
			width 100%
			height 4px
			background: #fff
			display block
			border-radius 6px 6px 0 0
			opacity 0
			visibility hidden

		&:not(:last-child)
			margin-right 20px
		a
			display flex
			align-items center
			color #fff
			text-decoration none
			font-size 13px
			line-height 18px
			
			span
				display inline-block
				brr(50%)
				font-size 12px
				line-height 16px
				background: #fff
				color: #517DA2
				min-height 18px
				min-width 18px
				text-align center
				margin-left 4px


.overlay--mobile-menu
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background: rgba(0, 0, 0, 0.4)
	z-index 90
	opacity 0
	visibility hidden
	&.is-active
		opacity 1
		visibility visible

.mobile-menu
	position absolute
	top 0
	left 0
	width 100%
	max-width 310px
	height 100%
	padding 12px
	background: #fff
	z-index 100
	trn(.15s)
	transform translate(-310px, 0)
	&.is-active
		transform translate(0, 0)

.mobile-menu--list
	li
		padding 12px 0
		a
			color #222
			text-decoration none