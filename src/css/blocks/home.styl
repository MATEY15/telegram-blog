.overlay-main
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background: rgba(51, 51, 51, 0.4)
	z-index 100
	opacity 0
	visibility hidden
	trn(.15s)
	&.is-active
		opacity 1
		visibility visible

.container-flex
	display flex
	flex-direction row

.main-content
	// width 100%
	flex-grow 1

.content-center
	// padding 12px
	background: #fff
	height calc(100vh - 62px)
	
	& .nano-content
		padding 12px
	
	&.nano .nano-pane
		height 98%
		top 1%
		width 3px
		right 3px
		background: rgba(154, 154, 154, 0.2) !important
		
		.nano-slider
			margin 0
			background: #8F8F8F
	
	p
		font-size 13px
		line-height 18px
	
	img
		max-width 100%
		margin-bottom 14px
		&.align-right
			margin-left 14px
		&.align-left
			margin-right 14px