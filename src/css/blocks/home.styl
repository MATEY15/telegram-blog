.overlay-main
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background: rgba(51, 51, 51, 0.4)
	z-index 100
	opacity 0
	visibility hidden
	trn(.15s)
	&.is-active
		opacity 1
		visibility visible

.container-flex
	display flex
	flex-direction row

.main-content
	// width 100%
	flex-grow 1

.contents-mobile
	position relative
	display none
	height 0
	overflow hidden
	trn(.2s)
	&.open
		height auto

.content-center
	background: #fff
	height calc(100vh - 62px)
	
	& .nano-content
		padding 12px
		padding-bottom 50px
	
	&.nano .nano-pane
		height 98%
		top 1%
		width 3px
		right 3px
		background: rgba(154, 154, 154, 0.2) !important
		
		.nano-slider
			margin 0
			background: #8F8F8F
	
	p
		font-size 13px
		line-height 18px
	
	img
		max-width 100%
		margin-bottom 14px
		&.align-right
			margin-left 14px
		&.align-left
			margin-right 14px


.close-content--wrapper
	position relative
	bottom 0
	left 0
	width 10px
	background: #f1f1f1
	border-left 1px solid #f1f1f1
	padding 6px 10px 8px
	text-align right
	.close-content
		position absolute
		top 0
		left 0
		padding-top 15px
		height 100%
		color #222
		font-size 16px
		text-decoration none
		
		svg
			position relative
			top 2px
			fill #222
			width 16px
			height 16px
			// transform: rotate(90deg)