.tool-bar
	background: #293A4C
	position relative
	max-width 70px
	width 100%

.tool-bar--list
	
	li
		a
			display flex
			flex-direction column
			justify-content center
			align-items center
			color #8293A5
			font-size 12px
			text-decoration none
			padding 7px 0
			min-height 62px
			trn(.15s)
			&.is-active,
			&:hover
				background: #17212B
				color #419FD9
				svg
					fill #419FD9
				
				.burger-menu
					span
						background: #419FD9
				
		span
			display block
	
	svg
		max-width 26px
		height auto
		fill #8293A5
		margin-bottom 6px
	.icon-message
		max-width 30px

.burger-menu
	display flex
	flex-direction column
	justify-content center
	align-items center
	span
		width 20px
		height 2px
		background: #8293A5
		&:not(:last-child)
			margin-bottom 3px

.left-sidebar
	position relative
	width 100%
	max-width 310px
	background: #fff
	&:before
		position absolute
		top 0
		right 0
		content ''
		width 1px
		height 100%
		display block
		// background: rgba(154, 154, 154, 0.2)
		background: #E7E7E7

.sidebar-aside
	position relative
	padding 14px 12px

.aside-search
	display: block
	width: 100%
	height: 34px
	font-size: 12px
	line-height: normal
	border-radius: 4px
	padding: 6px 26px 6px 30px
	margin: 0
	color #000
	outline none
	border: 2px solid transparent
	background-color: #f1f1f1
	background-image: url(../img/icon/IconsetW.png)
	background-repeat: no-repeat
	background-position: -6px -206px
	trn(.15s)
	
	&:focus
		border: 2px solid #54C3F3
		background-color: #fff

	&::-moz-placeholder
		color: #9aa2ab
		opacity: 1

	&:-ms-input-placeholder
		color: #9aa2ab

	&::-webkit-input-placeholder
		color: #9aa2ab


.sidebar-scroll
	width 100%
	height 100vh

.left-sidebar
	.nano
		width: 100%
		height: calc(100vh - 62px)
		& .nano-content
			// right 0 !important
		& .nano-pane
			opacity 0 !important
			width 3px
			right 3px
			background: rgba(154, 154, 154, 0.2) !important
			height 98%
			top 1%
			// background-color transparent
			trn(.15s)
			&.is-hover
				opacity 1 !important
			
			&:hover
				.nano-slider
					background: #6E6E6E
				
		& .nano-slider
			background: #9A9A9A !important
			margin 0 !important
			brr(20px)

.category-items
	display flex
	flex-direction row
	text-decoration none
	color #222
	padding: 7px 16px
	trn(.15s)
	&.is-active
		background: #419FD9
		h5,
		span,
		p
			color #fff
		&:hover
			background: #419FD9
	&:hover
		background: #F1F1F1

.category-item--content
	display: flex
	flex: 1
	flex-direction: column
	white-space: nowrap
	overflow: hidden
	text-overflow: ellipsis
	justify-content: space-evenly
	h5
		color #222
		font-size 13px
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
		padding-right 20px
	.date
		color #b3b3b3
		font-size 0.85em
	p
		color #999
		font-size 13px
		overflow: hidden
		white-space: nowrap
		text-overflow: ellipsis

.category-item--content-head
	display: flex
	-webkit-box-align: center
	align-items: center
	justify-content space-between

.category-item--images
	margin-right 15px
.category-item--images,
.category-item--images img
	position relative
	display block
	min-width 48px
	width 48px
	height 48px
	brr(50%)
	overflow hidden